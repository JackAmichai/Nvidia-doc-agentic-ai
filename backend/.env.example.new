# Environment variables for NVIDIA Doc Navigator

# Application Configuration
DEBUG=false
PROJECT_NAME="NVIDIA Doc Navigator"
PROJECT_VERSION="1.0.0"

# API Keys (optional for MVP)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Vector Store Configuration
CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=nvidia_docs

# RAG Configuration
DEFAULT_N_RESULTS=5
MAX_CONTENT_LENGTH=2000

# Scraper Configuration
SCRAPER_TIMEOUT=10
SCRAPER_RATE_LIMIT=1.0

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# GitHub API (optional, for higher rate limits on code search)
GITHUB_TOKEN=your_github_token_here
