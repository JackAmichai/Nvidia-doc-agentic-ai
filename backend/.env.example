# NVIDIA Doc Navigator - Environment Configuration

# ============================================================================
# NVIDIA API Keys (PRIMARY - Recommended for showcasing NVIDIA capabilities)
# ============================================================================

# NVIDIA NIM API Key (Get from https://build.nvidia.com)
# 1. Go to https://build.nvidia.com
# 2. Sign up or log in with NVIDIA account
# 3. Navigate to any model and click "Get API Key"
# 4. Paste your API key below
NVIDIA_API_KEY=

# NVIDIA NIM Model (default: meta/llama-3.1-70b-instruct)
# Other options: 
#   - meta/llama-3.1-8b-instruct (faster, smaller)
#   - mistralai/mixtral-8x7b-instruct-v0.1
#   - nvidia/nemotron-4-340b-instruct (most capable)
NVIDIA_NIM_MODEL=meta/llama-3.1-70b-instruct
NVIDIA_NIM_BASE_URL=https://integrate.api.nvidia.com/v1

# ============================================================================
# Fallback LLM API Keys (Optional)
# ============================================================================

# Hugging Face (FREE - Fallback option)
# https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=
HUGGINGFACE_REPO_ID=mistralai/Mistral-7B-Instruct-v0.2

# OpenAI (PAID - Fallback)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Claude (PAID - Fallback)
# https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# ============================================================================
# Database Configuration
# ============================================================================

CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=nvidia_docs

# ============================================================================
# NeMo Guardrails Configuration
# ============================================================================

ENABLE_GUARDRAILS=True
GUARDRAILS_CONFIG_PATH=./guardrails

# ============================================================================
# Application Settings
# ============================================================================

DEBUG=False
ENABLE_CACHE=True
CACHE_TTL=3600

# ============================================================================
# Scraper Settings (for data ingestion)
# ============================================================================

SCRAPER_TIMEOUT=10
SCRAPER_RATE_LIMIT=1.0
