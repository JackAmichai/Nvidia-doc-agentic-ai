# NVIDIA Doc Navigator - Environment Configuration

# ============================================================================
# LLM API Keys (Choose ONE - Free option: Hugging Face)
# ============================================================================

# Hugging Face (FREE - Recommended for MVP)
# 1. Go to https://huggingface.co/settings/tokens
# 2. Sign up or log in
# 3. Click "New token" and create a token with "Read" access
# 4. Paste your token below
HUGGINGFACE_API_KEY=

# Optional: Change the model (default is Mistral-7B)
# Other free models: "google/flan-t5-xxl", "EleutherAI/gpt-neo-2.7B"
HUGGINGFACE_REPO_ID=mistralai/Mistral-7B-Instruct-v0.2

# OpenAI (PAID - Alternative)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Claude (PAID - Alternative)
# https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# ============================================================================
# Database Configuration
# ============================================================================

CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=nvidia_docs

# ============================================================================
# Application Settings
# ============================================================================

DEBUG=False
ENABLE_CACHE=True
CACHE_TTL=3600

# ============================================================================
# Scraper Settings (for data ingestion)
# ============================================================================

SCRAPER_TIMEOUT=10
SCRAPER_RATE_LIMIT=1.0
